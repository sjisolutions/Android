                android:text="MONTLY OVERVIEW"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtten"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_alignLeft="@+id/txtten"
                android:layout_below="@+id/txtten"
                android:background="@drawable/blankspace"
                android:ems="10"
                android:gravity="top|left"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" />

            <Button
                android:id="@+id/btnsave"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/edtten"
                android:layout_below="@+id/edtten"
                android:layout_centerHorizontal="true"
                android:background="@drawable/save"
                android:text="Save" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtone"
                android:layout_marginLeft="10dp"
                android:text="1."
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
