<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/nav" >

        <TextView
            android:id="@+id/actiontext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Bonus Reports" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/books"
        android:layout_width="match_parent"
        android:layout_height="750dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp" >

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="664dp" >

            <ImageView
                android:id="@+id/yourattitude"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/innovativethink"
                android:layout_marginRight="22dp"
                android:src="@drawable/yourattitude" />

            <ImageView
                android:id="@+id/creativethink"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignLeft="@+id/innovative_think"
                android:layout_below="@+id/innovative_think"
                android:layout_marginTop="20dp"
                android:src="@drawable/creativethink" />

            <ImageView
                android:id="@+id/positivethink"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignLeft="@+id/innovativethink"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/positivethink" />

            <ImageView
                android:id="@+id/innovativethink"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/positive_think"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/innovativethink" />

            <ImageView
                android:id="@+id/solvingproblems"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_above="@+id/positive_think"
                android:layout_alignLeft="@+id/yourattitude"
                android:src="@drawable/solvingproblems" />

            <TextView
                android:id="@+id/your_attitude"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:layout_alignBaseline="@+id/innovative_think"
                android:layout_alignBottom="@+id/innovative_think"
                android:layout_alignLeft="@+id/yourattitude"
                android:layout_alignParentRight="true"
                android:text="How to Make Your Attitude Your Ally" />

            <TextView
                android:id="@+id/creative_think"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/creativethink"
                android:layout_alignRight="@+id/creativethink"
                android:layout_below="@+id/creativethink"
                android:text="How to Adopt Creative Thinking" />

            <TextView
                android:id="@+id/solving_problems"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_above="@+id/innovativethink"
                android:layout_alignRight="@+id/yourattitude"
                android:text="The Art of Solving Problems" />

            <TextView
                android:id="@+id/innovative_think"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_alignRight="@+id/innovativethink"
                android:layout_below="@+id/innovativethink"
                android:text="Innovative Thinking Secrets Exposed" />

            <TextView
                android:id="@+id/positive_think"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/innovative_think"
                android:layout_below="@+id/positivethink"
                android:text="The Power of Positive Thinking" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>