<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/online_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/segment_button_left_on"
            android:singleLine="true"
            android:text="Reports"
            android:textColor="#ffffff"
            android:textSize="13sp" />

        <Button
            android:id="@+id/offline_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/segment_button_right"
            android:singleLine="true"
            android:text="Selfimp"
            android:textColor="#ffffff"
            android:textSize="13sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/bonusreports"
        android:layout_width="fill_parent"
        android:layout_height="600dp"
        android:layout_marginTop="45dp" >

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="600dp" >

            <ImageView
                android:id="@+id/yourattitude"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/innovativethink"
                android:layout_marginRight="22dp"
                android:src="@drawable/yourattitude" />

            <TextView
                android:id="@+id/positive_think"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/positivethink"
                android:layout_alignRight="@+id/positivethink"
                android:layout_below="@+id/positivethink"
                android:layout_marginTop="18dp"
                android:text="The Power of Positive Thinking" />

            <TextView
                android:id="@+id/solving_problems"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/positive_think"
                android:layout_alignLeft="@+id/solvingproblems"
                android:layout_alignRight="@+id/solvingproblems"
                android:text="The Art of Solving Problems" />

            <TextView
                android:id="@+id/innovative_think"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/innovativethink"
                android:layout_below="@+id/innovativethink"
                android:layout_marginTop="15dp"
                android:text="Innovative Thinking Secrets Exposed" />

            <ImageView
                android:id="@+id/creativethink"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignLeft="@+id/innovative_think"
                android:layout_below="@+id/innovative_think"
                android:layout_marginTop="20dp"
                android:src="@drawable/creativethink" />

            <ImageView
                android:id="@+id/positivethink"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignLeft="@+id/innovativethink"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/positivethink" />

            <ImageView
                android:id="@+id/innovativethink"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/positive_think"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/innovativethink" />

            <TextView
                android:id="@+id/creative_think"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/creativethink"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/creativethink"
                android:text="How to Adopt Creative Thinking" />

            <ImageView
                android:id="@+id/solvingproblems"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_above="@+id/positive_think"
                android:layout_alignLeft="@+id/yourattitude"
                android:src="@drawable/solvingproblems" />

            <TextView
                android:id="@+id/your_attitude"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/innovative_think"
                android:layout_alignBottom="@+id/innovative_think"
                android:layout_alignLeft="@+id/yourattitude"
                android:layout_alignParentRight="true"
                android:text="How to Make Your Attitude Your Ally" />
        </RelativeLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/books"
        android:layout_width="fill_parent"
        android:layout_height="900dp"
        android:layout_marginTop="45dp" >

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="25dp"
                android:src="@drawable/bok" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/imageView7"
                android:src="@drawable/bok" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>